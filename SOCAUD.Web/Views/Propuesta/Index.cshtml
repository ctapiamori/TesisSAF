@model SOCAUD.Web.Models.PropuestaModel
@using SOCAUD.Common.Enum;

@{
    ViewBag.PageTitle = "Propuesta";
    ViewBag.PageDescription = "Propuesta";
    ViewBag.PageDescription = "Elaboracion de Propuesta";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="box box-primary color-palette-box">
            <div class="box-header with-border">
                <h3 class="box-title">Publicaciones</h3>
            </div>
            <div class="box-body">

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-4">
                            @Html.LabelFor(c => c.CODPUB)
                            @Html.DropDownListFor(c => c.CODPUB, Model.cboPublicaciones, "Seleccione", new { @class = "form-control" })
                        </div>
                        <div class="col-md-4">
                             @Html.LabelFor(c => c.CODBAS)
                            @Html.DropDownListFor(c => c.CODBAS, Model.cboBases, "Seleccione", new { @class = "form-control" })
                        </div>
                        <div class="col-md-4">
                            <br />
                            <button class="btn btn-default" type="button" id="btnBuscarPropuesta"><i class="fa fa-search"></i>&nbsp;Buscar</button>&nbsp;&nbsp;                           
                        </div>
                    </div>
                </div>


                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12">

                            <table id="tabPropuesta" class="table table-striped table-bordered" cellpadding="0" cellspacing="0" border="0"></table>

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <center>
                                <button class="btn btn-primary" type="button" id="btnAgregarPropuesta"><i class="fa fa-file"></i>&nbsp;Crear una Propuesta</button>&nbsp;&nbsp;
                            </center>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
@section scripts {

    <script type="text/javascript" language="javascript">

        var _dataPropuesta_ = null;

        var tabPropuesta = $("#tabPropuesta").dataTable({
            "info": false,
            "bServerSide": false,
            "data": _dataPropuesta_,
            "order": [[1, "asc"]],
            "columns": [
                {
                    "bSortable": false,
                    "sClass": "center",
                    "sWidth": "5%",
                    "render": function (data, type, row) {
                        if (row[6] == '@Estado.Propuesta.Elaboracion.GetHashCode()')
                            return '<center><button class="btn btn-success" title="Editar Propuesta" type="button" onclick="verPropuesta(' + row[0] + ');"><i class="fa fa-pencil"></i></button></center>';
                        else 
                            return '<center><button class="btn btn-primary" title="Editar Propuesta" type="button" onclick="verPropuestaLectura(' + row[0] + ');"><i class="fa fa-search"></i></button></center>';
                    }
                },
                { "sTitle": "Entidad" },
                { "sTitle": "Retribucion" },
                { "sTitle": "IGV" },
                { "sTitle": "Viaticos" },
                { "sTitle": "Estado" },
                {
                    "bSortable": false,
                    "sClass": "center",
                    "sWidth": "5%",
                    "render": function (data, type, row) {
                        if (row[6] == '@Estado.Propuesta.Elaboracion.GetHashCode()')
                            return '<center><button class="btn btn-danger" title="Eliminar" type="button" onclick="eliminarPropuesta(' + row[0] + ');"><i class="fa fa-trash"></i></button></center>';
                        else
                            return '';
                    }
                },
            ]

        });

        $(document).ready(function () {
            listarPropuesta();
            $("#btnAgregarPropuesta").click(agregarPropuesta);
            $("#btnBuscarPropuesta").click(listarPropuesta);
            $("#CODPUB").change(function () { cargarComboBases(); });
        });


        function cargarComboBases() {
            $.ajax({
                type: "POST",
                url: '@Url.Action("listarBases", "Propuesta")',
                data: { idPub: $("#CODPUB").val() },
                dataType: "json",
                success: function (result) {
                    $("#CODBAS option").not(":first").remove();
                    $.each(result, function (i, v) {
                        $("#CODBAS").append("<option value='" + v.CODBAS + "'>" + v.DESBAS + "</option>");
                    });
                }
            });
        }

        function agregarPropuesta() {

            bootbox.confirm(parametros.general.mensajeConfirmacion, function (result) {
                if (result) {
                    $.ajax({
                        url: '@Url.Action("CrearPropuesta", "Propuesta")',
                        type: 'POST',
                        async: false,
                        data: { idPub: $("#CODPUB").val(), idBase: $("#CODBAS").val() },
                        success: function (result) {
                            mostrarNotificacion(result);
                            listarPropuesta();
                        }
                    });
                }
            });
        }



        function listarPropuesta() {
            $.ajax({
                url: '@Url.Action("ListadoPropuestas", "Propuesta")',
                type: 'POST',
                async: false,
                data: { idPub: $("#CODPUB").val(), idBase: $("#CODBAS").val() },
                success: function (result) {
                    _dataPropuesta_ = result;
                    tabPropuesta.fnReloadData(_dataPropuesta_);
                }
            });
        }



        function verPropuesta(idPropuesta) {
            document.location = '@Url.Action("VerPropuesta", "Propuesta")' + "?idPropuesta=" + idPropuesta;
        }

        function verPropuestaLectura(idPropuesta) {
            document.location = '@Url.Action("LecturaPropuesta", "Propuesta")' + "?idPropuesta=" + idPropuesta;
        }

        function eliminarPropuesta(id) {
            bootbox.confirm(parametros.general.mensajeConfirmacion, function (result) {
                if (result) {
                    $.ajax({
                        url: '@Url.Action("EliminarPropuesta", "Propuesta")',
                        type: 'POST',
                        async: false,
                        data: { idProp: id },
                        success: function (result) {
                            mostrarNotificacion(result);
                            listarPropuesta();
                        }
                    });
                }
            });

        }

    </script>
}