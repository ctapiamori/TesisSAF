@using SOCAUD.Common.Enum;
@using SOCAUD.Web.Models;
@model ConsultaBases
 

 
@{
    ViewBag.PageTitle = "Consulta";
    ViewBag.PageDescription = "Bases de Concurso";
}
 
 
    <div class="box box-primary color-palette-box">
        <div class="box-header with-border">
            <h3 class="box-title">Busqueda de Bases</h3>
        </div>
        <div class="box-body">
            <div class="form-group">
                <div class="row">
                    <div class="col-md-3">
                      @Html.LabelFor(c=>c.CodigoCronograma)
                      @Html.DropDownListFor(c => c.CodigoCronograma, Model.cboCronograma, "Seleccione", new { @class = "form-control"  })
                    </div>
                   <div class="col-md-3">
                        <br />
                        <button id="btnBuscar" class="btn btn-default"><i class="fa fa-search"></i>&nbsp;Buscar</button>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-12">
                        <table id="tabBases" class="table table-striped table-bordered" cellpadding="0" cellspacing="0" border="0"></table>
                    </div>
                </div>
            </div>
        </div>
    </div>


@section scripts {

    <script type="text/ecmascript">


        var _dataBases_ = null;
        var tabBases = $("#tabBases").dataTable({
            "info": false,
            "bServerSide": false,
            "data": _dataBases_,
            "order": [[1, "asc"]],
            "columns": [
                {
                    "bSortable": false,
                    "sClass": "center",
                    "sWidth": "5%",
                    "render": function (data, type, row) {
                        return '<center><button class="btn btn-primary" title="Ver Documento" type="button" onclick="descargarBases(' + row[0] + ');"><i class="fa fa-download"></i></button></center>';
                    }
                },
                { "sTitle": "Número" },
                { "sTitle": "Fecha máxima de <br/> Publicación", "sClass": "center" },
                { "sTitle": "Descripción" },
                { "sTitle": "Total Retribución" },
                { "sTitle": "Total Viaticos" },
                { "sTitle": "Firma de PCAOB", "visible": false },
                { "sTitle": "Firma Internacional", "visible": false }
            ]
        });



        $(document).ready(function () {
            listarBases();
            $("#btnBuscar").click(listarBases);
        });

        function listarBases() {
            $.ajax({
                url: '@Url.Action("ListarBases", "ConsultasPublica")',
                type: 'POST',
                async: false,
                data: { cronograma: $("#CodigoCronograma").val() },
                success: function (result) {
                    _dataBases_ = result;
                    tabBases.fnReloadData(_dataBases_);
                }
            });
        }

        function descargarBases(id) {
            var url = '@Url.Action("CreateReporteBase", "ConsultasPublica", new { Area = "", id = "_id_" })'.replace('_id_', id);
            window.open(url);
        }

    </script>
}