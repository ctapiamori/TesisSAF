@using SOCAUD.Common.Enum;
@using SOCAUD.Web.Models;

@model RegistroConsultaModel




<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Nueva Consulta</h4>
        </div>
        <div class="modal-body">
            <form id="frmRegistroConsulta">
                <div class="form-group">
                    <div class="row">

                        <div class="col-md-6">
                            @Html.LabelFor(c => c.codRegPublicacion)
                            @Html.DropDownListFor(c => c.codRegPublicacion, Model.cboPublicaciones, "Seleccione", new { @class = "form-control" })
                            @Html.ValidationMessageFor(c => c.codRegPublicacion)
                        </div>
                        <div class="col-md-6">
                            @Html.LabelFor(c => c.codRegBase)
                            @Html.DropDownListFor(c => c.codRegBase, Model.cboBases, "Seleccione", new { @class = "form-control" })
                            @Html.ValidationMessageFor(c => c.codRegBase)
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">

                        <div class="col-md-12">
                            <textarea id="Pregunta" name="Pregunta" class="form-control" rows="4"></textarea>
                        </div>

                    </div>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button id="btnGrabarConsulta" type="button" class="btn btn-primary"><i class="fa fa-save"></i>&nbsp;Grabar Consulta</button>
            <input type="button" class="btn btn-default" id="btnCancelar" value="Cerrar" data-dismiss="modal" />
        </div>
    </div>
</div>






<script type="text/javascript">

    $(document).ready(function () {
 

        $("#codRegPublicacion").change(function () {
            cargarComboBasesGrabar();
        });

        $("#btnGrabarConsulta").click(grabarConsulta);

    });

    function cargarComboBasesGrabar() {
        $.ajax({
            type: "POST",
            url: '@Url.Action("listarBases", "Consulta")',
            data: { idPub: $("#codRegPublicacion").val() },
            dataType: "json",
            success: function (result) {
                $("#codRegBase option").not(":first").remove();
                $.each(result, function (i, v) {
                    $("#codRegBase").append("<option value='" + v.CODBAS + "'>" + v.DESBAS + "</option>");
                });
            }
        });
    }

    function grabarConsulta() {
        $("#frmRegistroConsulta").updateValidation();
        if (!$("#frmRegistroConsulta").isValid()) { return; }


        bootbox.confirm(parametros.general.mensajeConfirmacion, function (result) {
            if (result) {
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("GrabarConsulta", "Consulta")',
                    data: { idPub: $("#codRegPublicacion").val(), idBase: $("#codRegBase").val(), consulta: $("#Pregunta").val() },
                    dataType: "json",
                    success: function (result) {
                        mostrarNotificacion(result);
                        $("#modalNuevaConsulta").modal('hide');
                    }
                });
            }
        });
    }

 

</script>
