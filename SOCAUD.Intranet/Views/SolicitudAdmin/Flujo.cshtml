@{
    ViewBag.PageTitle = "Flujo";
    ViewBag.PageDescription = "Flujo";
    ViewBag.PageDescription = "Flujo de Solicitud";
}


<div class="box box-primary color-palette-box">
    <div class="box-header with-border">
        <h3 class="box-title">Listado de Solicitudes</h3>
    </div>
    <div class="box-body">
        <table id="tabSolicitudes" class="table table-striped table-bordered" cellpadding="0" cellspacing="0" border="0"></table>
    </div>
</div>

<div class="modal fade" id="modalWorkflow" tabindex="-1" role="dialog" aria-hidden="true"></div>
@section scripts {

    <script type="text/javascript">


        var tabSolicitudes;
        var _dataSolicitudes_ = null;

        $(document).ready(function () {
            listarSolicitudes();
        });

        function listarSolicitudes() {

            if (tabSolicitudes == undefined) {
                tabSolicitudes = $("#tabSolicitudes").dataTable({
                    "info": false,
                    "bServerSide": false,
                    "data": _dataSolicitudes_,
                    "pageLength": 50,
                    //"order": [[1, "asc"]],
                    "columns": [
                        {
                            "bSortable": false,
                            "sClass": "center",
                            "sWidth": "5%",
                            "render": function (data, type, row) {
                                if (row[7] == '1')
                                    return '<center><button class="btn btn-success" title="Responder" type="button" onclick="AbrirFlujo(' + row[0] + ',\'' + row[4] + '\',' + row[6] + ');"><i class="fa fa-share"></i></button></center>';
                                return '';
                            }
                        },
                        {
                            "sTitle": "Flujo",
                            "sClass": "center"
                        },
                        { "sTitle": "Nota" },
                        { "sTitle": "Fecha" }
                    ]

                });
            }

            $.ajax({
                url: '@Url.Action("listarFlujos", "SolicitudAdmin")',
                type: 'POST',
                async: false,
                data: {},
                success: function (result) {
                    _dataSolicitudes_ = result;
                    tabSolicitudes.fnReloadData(_dataSolicitudes_);
                }
            });
        }

        function AbrirFlujo(idFlujo, tipo, codigo) {
            $.ajax({
                type: 'POST',
                url: '@Url.Action("Solicitud", "Workflow")',
                data: { idDocumento: codigo, tipoDocumento: tipo, idFlujo: idFlujo },
                success: function (result) {
                    $("#modalWorkflow").empty().html(result).modal();
                }
            });
        }
    </script>
}
