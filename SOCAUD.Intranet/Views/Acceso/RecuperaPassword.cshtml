@using SOCAUD.Common.Constantes;

@model SOCAUD.Intranet.Models.AccesoModel

@using SOCAUD.Common.Enum
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Recupera Contraseña</title>


    @Styles.Render("~/Content/Login")
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <center>
                <img src="~/Content/Images/LogoCGRFull.jpg" style="width:300px; height:80px;" />
            </center>
        </div><!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">Recupera tu contraseña, se te enviara un correo electronico</p>
            <form action="../../index2.html" method="post">

                <div class="form-group has-feedback">
                    <select id="tipoUsuario" name="tipoUsuario" class="form-control">
                        <option value="I">Usuario Interno</option>
                        <option value="E">Usuario Externo</option>
                    </select>
                </div>

                <div class="form-group has-feedback" id="contentTipoExterno" style="display:none;">
                    <select id="tipoExterno" name="tipoExterno" class="form-control">
                        <option value='@Convert.ToInt32(Tipo.TipoUsuarioExtranet.Auditor)'>Auditor</option>
                        <option value='@Convert.ToInt32(Tipo.TipoUsuarioExtranet.SociedadAuditoria)'>Sociedad Auditoria</option>
                    </select>
                </div>

                <div class="form-group has-feedback">
                    @Html.TextBoxFor(c => c.Usuario, new { @class = "form-control", @placeholder = "Usuario" })
                    <!--<input type="email" class="form-control" placeholder="Usuario">-->
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    @Html.TextBoxFor(c => c.Correo, new { @class = "form-control", @placeholder = "Correo Electronico" })
                    <!--<input type="password" class="form-control" placeholder="Contraseña">-->
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <div class="row">
                        <div class="col-xs-4 center">
                            <button type="button" id="btnIngresarSistema" class="btn btn-primary">Recuperar Contraseña</button>
                            <button type="button" id="btnRegresar" class="btn btn-default">Regresar</button>
                        </div><!-- /.col -->
                    </div>
                </div>
            </form>
        </div><!-- /.login-box-body -->
    </div><!-- /.login-box -->
    @Scripts.Render("~/Scripts/Login")

    <script type="text/javascript" language="javascript">

        $(document).ready(function () {
            $("#btnRegresar").click(function () {
                document.location.href = '@Url.Action("Login","Acceso")';
            });

            $("#btnIngresarSistema").click(ingresarSistema);
            $("#tipoUsuario").change(function () {
 
                if ($(this).val() == "E")
                    $("#contentTipoExterno").show();
                else
                    $("#contentTipoExterno").hide();
            });
        });

        function ingresarSistema() {
            
            var tipousu = $("#tipoUsuario").val();
            var tipoex = $("#tipoExterno").val();
            
            $.ajax({
                type: "POST",
                url: '@Url.Action("RecuperarContrasenaMail", "Acceso")',
                data: {
                    tipoUsuario: tipousu,
                    tipoExterno: tipoex,
                    usuario: $("#Usuario").val(),
                    correo: $("#Correo").val()
                },
                success: function (result) {
                    
                    new PNotify({
                        title: 'Respuesta Sistema!',
                        type: (result.Correcto)? "success" : "error",
                        text: result.Mensaje
                    });
                        
                }
            });
        }

    </script>
</body>
</html>
