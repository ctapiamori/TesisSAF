@using SOCAUD.Intranet.Models;

 
 
@{
    ViewBag.PageTitle = "Sub-Menu";
    ViewBag.PageDescription = "Sub-Menu";
    ViewBag.PageDescription = "Sub controles del Menu";
}
 
    <div class="box box-primary color-palette-box">
        <div class="box-header with-border">
            <h3 class="box-title">Opciones del Sub-Menu</h3>
        </div>
        <div class="box-body">
            <div class="form-group">
                <div class="row">
                    <div class="col-md-12">
                        <table id="tabSubMenu" name="tabSubMenu" class="table table-striped table-bordered" cellpadding="0" cellspacing="0" border="0"></table>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-12" style="text-align:center;">
                        <button id="btnAgregarNuevo" type="button" class="btn btn-success"><i class="fa fa-save"></i>&nbsp;Agregar Nuevo</button>
                    </div>
                </div>
            </div>
        </div>
    </div>


@section scripts {

    <script type="text/ecmascript">
        
        $(document).ready(function () {
            listarSubMenu();
            $("#btnAgregarNuevo").click(function () {
                document.location.href = '@Url.Action("Agregar","SubMenu")';
            });
        });

        var _dataSubMenu_ = null;
        var tabSubMenu = $("#tabSubMenu").dataTable({
            "info": false,
            "bServerSide": false,
            "data": _dataSubMenu_,
            "order": [[1, "asc"]],
            "columns": [
                {
                    "bSortable": false,
                    "sClass": "center",
                    "sWidth": "5%",
                    "render": function (data, type, row) {
                        return '<center><button class="btn btn-success" title="Editar" type="button" onclick="EditarSubMenu(' + row[0] + ');"><i class="fa fa-pencil"></i></button></center>';

                    }
                },
                { "sTitle": "Menu" },
                { "sTitle": "Sub Menu" },
                { "sTitle": "Ruta Sub Menu" },
                {
                    "bSortable": false,
                    "sClass": "center",
                    "sWidth": "5%",
                    "render": function (data, type, row) {
                        return '<center><button class="btn btn-danger" title="Eliminar" type="button" onclick="EliminarSubMenu(' + row[0] + ');"><i class="fa fa-trash"></i></button></center>';

                    }
                }
            ]
        });


        function listarSubMenu() {
            $.ajax({
                url: '@Url.Action("ListarSubMenu", "SubMenu")',
                type: 'POST',
                async: false,
                data: {},
                success: function (result) {
                    _dataSubMenu_ = result;
                    tabSubMenu.fnReloadData(_dataSubMenu_);
                }
            });
        }

        function EliminarSubMenu(idSubMen) {

            bootbox.confirm(parametros.general.mensajeConfirmacion, function (result) {

                if (result) {
                    $.ajax({
                        url: '@Url.Action("EliminarSubMenu", "SubMenu")',
                        type: 'POST',
                        async: false,
                        data: { id: idSubMen },
                        success: function (result) {
                            mostrarNotificacion(result);
                            listarSubMenu();
                        }
                    });
                }
            });


        }

        function EditarSubMenu(id) {
            document.location.href = '@Url.Action("Editar","SubMenu")' + "/" + id;
        }

    </script>
}