@using SOCAUD.Intranet.Models;
@model UsuarioModel
 
@{
    ViewBag.PageTitle = "Agregar Usuario";
    ViewBag.PageDescription = "Agregar Usuario";
    ViewBag.PageDescription = "Usuarios del Sistema";
}
 
<form id="frmGrabarUsuario">
    <div class="box box-primary color-palette-box">
        <div class="box-header with-border">
            <h3 class="box-title">Información del Personal</h3>
        </div>
        <div class="box-body">
            <div class="form-group">

                <div class="row">
                    <div class="col-md-6">
                        @Html.LabelFor(m => m.DNIUSU)
                        @Html.TextBoxFor(m => m.DNIUSU, new { @class = "form-control"  })
                        @Html.ValidationMessageFor(c => c.DNIUSU)
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        @Html.LabelFor(m => m.NOMPERUSU)
                        @Html.TextBoxFor(m => m.NOMPERUSU, new { @class = "form-control"  })
                        @Html.ValidationMessageFor(c => c.NOMPERUSU)
                    </div>
                    <div class="col-md-6">
                        @Html.LabelFor(m => m.APEPERUSU)
                        @Html.TextBoxFor(m => m.APEPERUSU, new { @class = "form-control"  })
                        @Html.ValidationMessageFor(c => c.APEPERUSU)
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        @Html.LabelFor(m => m.TIPCARUSU)
                        @Html.DropDownListFor(m => m.TIPCARUSU, Model.cboListaCargo , "Seleccione", new { @class = "form-control"  })
                        @Html.ValidationMessageFor(c => c.TIPCARUSU)
                    </div>
                    <div class="col-md-6">
                        @Html.LabelFor(m => m.CODENT)
                        @Html.DropDownListFor(m => m.CODENT, Model.cboListaEntidad , "Seleccione", new { @class = "form-control", @disabled = "true"  })
                        @Html.ValidationMessageFor(c => c.CODENT)
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        @Html.LabelFor(m => m.CORREOUSER)
                        @Html.TextBoxFor(m => m.CORREOUSER, new { @class = "form-control"  })
                        @Html.ValidationMessageFor(c => c.CORREOUSER)
                    </div>

                </div>
            </div>
        </div>
    </div>


    <div class="box box-primary color-palette-box">
        <div class="box-header with-border">
            <h3 class="box-title">Información del Usuario</h3>
        </div>
        <div class="box-body">
            <div class="form-group">
                <div class="row">
                    <div class="col-md-6">
                        @Html.LabelFor(m => m.CODPER)
                        @Html.DropDownListFor(m => m.CODPER, Model.cboListaPerfil , "Seleccione", new { @class = "form-control"   })
                        @Html.ValidationMessageFor(c => c.CODPER)
                    </div>

                </div>

                <div class="row">
                    <div class="col-md-6">
                        @Html.LabelFor(m => m.NOMUSU)
                        @Html.TextBoxFor(m => m.NOMUSU, new { @class = "form-control"  })
                        @Html.ValidationMessageFor(c => c.NOMUSU)
                    </div>
                    <div class="col-md-6">
                        @Html.LabelFor(m => m.PASUSU)
                        @Html.TextBoxFor(m => m.PASUSU, new { @class = "form-control"  })
                        @Html.ValidationMessageFor(c => c.PASUSU)
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-md-12" style="text-align: center;">
                <button id="btnAgregar" type="button" class="btn btn-primary"><i class="fa fa-save"></i>&nbsp;Agregar</button>
                <button type="button" id="btnRegresar" class="btn btn-default"><i class="fa fa-chevron-left"></i>&nbsp;Regresar</button>
            </div>
        </div>
    </div>

</form>

@section scripts {

    <script type="text/ecmascript">

        $(document).ready(function () {

            $("#btnRegresar").click(function () {
                document.location.href = '@Url.Action("BandejaUsuarios","Usuario")';
            });

            $("#TIPCARUSU").change(function () {
                if ($("#TIPCARUSU").val() == "45") {
                    //SI tipo cargo es EXTERNO
                    $("#CODENT").attr("disabled", false);
                } else {
                    $("#CODENT").val(null);
                    $("#CODENT").attr("disabled", true);
                }
            });

            $("#btnAgregar").click(function () {
                if (!$("#frmGrabarUsuario").isValid()) return;

                bootbox.confirm(parametros.general.mensajeConfirmacion, function (result) {

                    if (result) {
                        $.ajax({
                            type: 'POST',
                            url: '@Url.Action("AgregarNuevoUsuario","Usuario")',
                            data: $("#frmGrabarUsuario").serialize(),
                            success: function (result) {
                                mostrarNotificacion(result);
                            }
                        });
                    }
                });
            });


        });

    </script>
}