@model SOCAUD.Intranet.Models.PuntajeModel
 
@{
    ViewBag.PageTitle = "Puntaje";
    ViewBag.PageDescription = "Puntaje";
    ViewBag.PageDescription = "Puntos para las propuesta";
}
 
 <div class="callout callout-info">
    <h4><i class="icon fa fa-warning"></i>&nbsp;Información</h4>
    <p>
        Este puntaje sera aplicado a las sociedades de auditoria para cuando se presenten a una publicación para determinar su 
        puntaje maximo y determinar un ganador.
    </p>
</div>
    <div class="box box-primary color-palette-box">
        <div class="box-header with-border">
            <h3 class="box-title">Puntaje para las Propuesta</h3>
        </div>
        <div class="box-body">
            <div class="form-group">
                <div class="row">
                    <div class="col-md-3 col-md-offset-3">
                      <label style="font-size:20px;">Calculo de Experiencia</label>
                      @Html.TextBoxFor(c => c.PuntajeExp, new { @class = "form-control", @style="height:100px;text-align:center;font-size:50px;" })
                    </div>
                    <div class="col-md-3">
                      <label style="font-size:20px;">Calculo de Capacitación</label>
                      @Html.TextBoxFor(c => c.PuntajeCapa, new { @class = "form-control", @style="height:100px;text-align:center;font-size:50px;" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-12" style="text-align:center;">
                        <button id="btnGrabar" type="button" class="btn btn-success"><i class="fa fa-save"></i>&nbsp;Grabar Parametros para calculo de Propuesta</button>
                    </div>

                </div>
            </div>
        </div>
    </div>


@section scripts {

    <script type="text/ecmascript">

        $(document).ready(function () {

            $("#btnGrabar").click(function () {
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("GrabarPuntaje", "Puntaje")',
                    data: { Experiencia: $("#PuntajeExp").val(), Capacitacion: $("#PuntajeCapa").val() },
                    success: function (result) {
                        mostrarNotificacion(result);
                    }
                });
            });


        });

    </script>
}