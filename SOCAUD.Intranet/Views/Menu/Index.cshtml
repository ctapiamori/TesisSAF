@using SOCAUD.Intranet.Models;

 
 
@{
    ViewBag.PageTitle = "Menu";
    ViewBag.PageDescription = "Menu";
    ViewBag.PageDescription = "Opciones del Sistema";
}
 
    <div class="box box-primary color-palette-box">
        <div class="box-header with-border">
            <h3 class="box-title">Opciones del Menu</h3>
        </div>
        <div class="box-body">
            <div class="form-group">
                <div class="row">
                    <div class="col-md-12">
                        <table id="tabMenu" name="tabMenu" class="table table-striped table-bordered" cellpadding="0" cellspacing="0" border="0"></table>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-12" style="text-align:center;">
                        <button id="btnAgregarNuevo" type="button" class="btn btn-primary"><i class="fa fa-save"></i>&nbsp;Crear Nuevo Menu</button>
                    </div>
                </div>
            </div>
        </div>
    </div>


@section scripts {

    <script type="text/ecmascript">
        
        $(document).ready(function () {
            listarMenu();
            $("#btnAgregarNuevo").click(function () {
                document.location.href = '@Url.Action("Agregar","Menu")';
            });
        });

        var _dataMenu_ = null;
        var tabMenu = $("#tabMenu").dataTable({
            "info": false,
            "bServerSide": false,
            "data": _dataMenu_,
            "order": [[1, "asc"]],
            "columns": [
                {
                    "bSortable": false,
                    "sClass": "center",
                    "sWidth": "5%",
                    "render": function (data, type, row) {
                        return '<center><button class="btn btn-success" title="Editar" type="button" onclick="EditarMenu(' + row[0] + ');"><i class="fa fa-pencil"></i></button></center>';

                    }
                },
                { "sTitle": "Menu" },
                { "sTitle": "Ruta" },
                { "sTitle": "Icono" },
                {
                    "bSortable": false,
                    "sClass": "center",
                    "sWidth": "5%",
                    "render": function (data, type, row) {
                        return '<center><button class="btn btn-danger" title="Eliminar" type="button" onclick="EliminarMenu(' + row[0] + ');"><i class="fa fa-trash"></i></button></center>';

                    }
                }
            ]
        });


        function listarMenu() {
            $.ajax({
                url: '@Url.Action("ListarMenu", "Menu")',
                type: 'POST',
                async: false,
                data: {},
                success: function (result) {
                    _dataMenu_ = result;
                    tabMenu.fnReloadData(_dataMenu_);
                }
            });
        }

        function EliminarMenu(idMen) {

            bootbox.confirm(parametros.general.mensajeConfirmacion, function (result) {

                if (result) {
                    $.ajax({
                        url: '@Url.Action("EliminarMenu", "Menu")',
                        type: 'POST',
                        async: false,
                        data: { id: idMen },
                        success: function (result) {
                            mostrarNotificacion(result);
                            listarMenu();
                        }
                    });
                }
            });


        }

        function EditarMenu(id) {
            document.location.href = '@Url.Action("Editar","Menu")' + "/" + id;
        }

    </script>
}