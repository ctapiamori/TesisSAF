@model SOCAUD.Intranet.Controllers.ConsultaEntidadModel


<form id="frmGrabarRespuesta" name="frmGrabarRespuesta">
@Html.HiddenFor(c => c.CodigoConsulta)
@Html.HiddenFor(c => c.idBase)
@Html.HiddenFor(c => c.IdPublicacion)
 
<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Respuesta Consulta</h4>
        </div>
        <div class="modal-body">

            <div class="form-group">
                <div class="row">
                    <div class="col-md-4">
                        @Html.LabelFor(c => c.Publicacion)
                        @Html.TextBoxFor(c => c.Publicacion, new { @class = "form-control", @readonly="true" })
                    </div>
                    <div class="col-md-8">
                        @Html.LabelFor(c => c.DesBase)
                        @Html.TextBoxFor(c => c.DesBase, new { @class = "form-control", @readonly="true" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-8">
                        @Html.LabelFor(c => c.SOA)
                        @Html.TextBoxFor(c => c.SOA, new { @class = "form-control", @readonly="true" })
                    </div>
                    <div class="col-md-4">
                        @Html.LabelFor(c => c.EstadoDes)
                        @Html.TextBoxFor(c => c.EstadoDes, new { @class = "form-control", @readonly="true" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-12">
                        @Html.LabelFor(c => c.DescripcionConsulta)
                            <textarea readonly="readonly" class="form-control" rows="5">@Model.DescripcionConsulta</textarea>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-12">
                        @Html.LabelFor(c => c.RespuestaConsulta)
                            <textarea id="RespuestaConsulta" name="RespuestaConsulta"  class="form-control" rows="5">@Model.RespuestaConsulta</textarea>
                    </div>
                </div>
            </div>

      

        </div>
       <div class="modal-footer">
            <button type="button" id="ResponderConsulta" class="btn btn-primary" >Grabar</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>&nbsp;
        </div>
    </div>
</div>

</form>




<script type="text/javascript">

 
    $(document).ready(function () {
        
        $("#ResponderConsulta").click(registrarRespuesta);
 
    });

 

    function registrarRespuesta() {
        bootbox.confirm(parametros.general.mensajeConfirmacion, function (result) {
            if (result) {
                $.ajax({
                    url: '@Url.Action("GrabarRespuesta", "Consulta")',
                    type: 'POST',
                    async: false,
                    data: $("#frmGrabarRespuesta").serialize(),
                    success: function (result) {
                        mostrarNotificacion(result);
                    }
                });
            }
        });
    }


    

</script>
